<h1>Devour that Burger!</h1>

<div class="parent">
  <div class="half-section">
    <h2>Burgers available to be Devoured!</h2>

    <ul>
      {{#each burger}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="half-section">
    <h2>Burgers already eaten</h2>

    <ul>
      {{#each burger}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>

  </div>
</div>


<h2>Add a new Burger</h2>

<div class="half-section">
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label>
      <br>
      <input type="radio" name="devoured" value="1" checked> Too Late already eaten!
      <br>
      <input type="radio" name="devoured" value="0"> Eat Me!
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>

